-
  var meta_title = 'glsl school 2016';
  var meta_keywords = 'WebGL, three.js';
  var meta_description = '2016年10月開講の短期集中GLSLスクールに関するレポートと、講習を受けて作成したデモを置いています。';
  var meta_path = '/';
  var meta_ogp_img = 'share.jpg';

doctype html
html(lang="ja")
  head
    include ./modules/_head.pug
  body
    .p-contents-summary
      h1.p-contents-summary__head
        |#{meta_title}
      p.p-contents-summary__text
        |#{meta_description}
      p.p-contents-summary__link-source
        a(href="https://github.com/ykob/"+repository_name)
          |view source.
    canvas(id="canvas-webgl", class="p-canvas-webgl")
    script(src="./js/vendor.js")
    script(src="./js/main.js")
